{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "react"],
    "paths": {
      "*": ["./src/*"]
    }
  },
  "jsoncompilerOptions":  {
    "strictNullChecks": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "build"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    }
  }
}